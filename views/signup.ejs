<!-- header -->
<%- include('header') %>

<body>
    <!-- navbar -->
    <%- include('navbar') %>

    <!-- main section -->
    <main class="container">

        <!-- page title header -->
        <hgroup class="centre-text">
            <h1>Welcome to Pokemon TCG</h1>
            <p>Sign up and get started</p>
        </hgroup>

        <!-- page content -->
        <div class="grid">
            <!-- left section -->
            <div>
                Perks of having an account:
                <ul>
                    <li>Can have your own collection of cards</li>
                    <li>Can comment on other people's collections</li>
                    <li>Can add cards to your wishlist</li>
                </ul>
            </div>

            <!-- right section -->
            <article>
                <form>
                    <fieldset>
                        <div class="grid">
                            <div>
                                <label>
                                    First Name
                                    <input type="text" name="firstname" placeholder="First Name" aria-label="Text" />
                                </label>
                            </div>
                            <div>
                                <label>
                                    Last Name
                                    <input type="text" name="lastname" placeholder="Last Name" aria-label="Text" />
                                </label>
                            </div>
                        </div>
                        <label>
                            Email address
                            <input name="email" placeholder="Email address" autocomplete="email" />
                        </label>
                        <label>
                            Password
                            <input type="password" name="password" placeholder="Password" autocomplete="new-password" />
                        </label>
                    </fieldset>

                    <input type="submit" value="Sign Up" />
                </form>

                <a href="/login"><button class="outline full-length-button">Already have an account? Log
                        in</button></a>

            </article>
        </div>
    </main>





</body>

<!-- footer -->
<%- include('footer') %>

</html>