    <!-- main section -->
    <main class="container">

        <!-- page title header -->
        <div class="centre-text">
            <h1>Cards</h1>
        </div>

        <!-- page content -->
        <div class="grid centre-item">
            <!-- search bar -->
            <div>
                <form role="search">
                    <input name="search" type="search" placeholder="Search cards" />
                    <input type="submit" value="Search" />
                </form>
            </div>

            <!-- filter button -->
            <div class="filter-button-padding">
                <a href="filter.html"><button class="rounded-button">Filter</button></a>
            </div>
        </div>

        <div class="grid">
            <!-- Filter tab -->
            <div>
                <h3>Filter</h3>
                <details class="dropdown">
                    <summary>
                        Type
                    </summary>
                    <ul>
                        <li><label><input type="checkbox" name="fire" />Fire</label></li>
                        <li><label><input type="checkbox" name="water" />Water</label></li>
                        <li><label><input type="checkbox" name="grass" />Grass</label></li>
                        <li><label><input type="checkbox" name="fairy" />Fairy</label></li>
                    </ul>
                </details>
                <details class="dropdown">
                    <summary>
                        Weakness
                    </summary>
                    <ul>
                        <li><label><input type="checkbox" name="fire" />Fire</label></li>
                        <li><label><input type="checkbox" name="water" />Water</label></li>
                        <li><label><input type="checkbox" name="grass" />Grass</label></li>
                        <li><label><input type="checkbox" name="fairy" />Fairy</label></li>
                    </ul>
                </details>
                <label>
                    HP
                    <input type="range" value="40" />
                  </label>
                  <fieldset>
                    <label>
                    Normal
                      <input name="terms" type="checkbox" role="switch" />
                    Holo
                    </label>
                </fieldset>
            </div>

            <!-- display cards -->
            <article class="card">
                <div>
                    <a href="cardinfo.html"><img src="../images/furret.webp" class="card-pic-padding"></a>
                </div>
                <div>
                    <h5>Name of pokemon</h5>
                </div>
                <div>
                    <p>about pokemon</p>
                </div>

            </article>

            <article class="card">I’m a card!</article>
            <article class="card">I’m a card!</article>
            <article class="card">I’m a card!</article>
        </div>

