<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cards</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css" />
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" href="pikachu_favicon.png" type="image/png">
</head>

<body>
    <!-- navbar -->
    <%- include('navbar') %>

    <!-- main section -->
    <main class="container">

        <!-- page title header -->
        <div class="centre-text">
            <h1>Cards</h1>
        </div>

        <!-- page content -->
        <div class="grid centre-item">
            <!-- search bar -->
            <div>
                <form role="search">
                    <input name="search" type="search" placeholder="Search cards" />
                    <input type="submit" value="Search" />
                </form>
            </div>

            <!-- filter button -->
            <div class="filter-button-padding">
                <a href="/filter"><button class="rounded-button">Filter</button></a>
            </div>
        </div>

        <div class="grid">
            <!-- Filter tab -->
            <div>
                <h3>Filter</h3>
                <details class="dropdown">
                    <summary>
                        Type
                    </summary>
                    <ul>
                        <li><label><input type="checkbox" name="fire" />Fire</label></li>
                        <li><label><input type="checkbox" name="water" />Water</label></li>
                        <li><label><input type="checkbox" name="grass" />Grass</label></li>
                        <li><label><input type="checkbox" name="fairy" />Fairy</label></li>
                    </ul>
                </details>
                <details class="dropdown">
                    <summary>
                        Weakness
                    </summary>
                    <ul>
                        <li><label><input type="checkbox" name="fire" />Fire</label></li>
                        <li><label><input type="checkbox" name="water" />Water</label></li>
                        <li><label><input type="checkbox" name="grass" />Grass</label></li>
                        <li><label><input type="checkbox" name="fairy" />Fairy</label></li>
                    </ul>
                </details>
                <label>
                    HP
                    <input type="range" value="40" />
                  </label>
                  <fieldset>
                    <label>
                    Normal
                      <input name="terms" type="checkbox" role="switch" />
                    Holo
                    </label>
                </fieldset>
            </div>

            <!-- display cards -->
            <article class="card">
                <div>
                    <a href="/cardinfo"><img src="furret.webp" class="card-pic-padding"></a>
                </div>
                <div>
                    <h5>Name of pokemon</h5>
                </div>
                <div>
                    <p>about pokemon</p>
                </div>

            </article>

            <article class="card">I’m a card!</article>
            <article class="card">I’m a card!</article>
            <article class="card">I’m a card!</article>
        </div>

    </main>

</body>

<!-- footer -->
<%- include('footer') %>

</html>