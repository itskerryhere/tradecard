<!-- header -->
<%- include('header') %>

<body>
    <!-- navbar -->
    <%- include('navbar') %>

    <!-- main section -->
    <main class="container">

        <!-- page title header -->
        <hgroup class="centre-text">
            <h1>All Collections</h1>
            <p>Browse collections from other members</p>
        </hgroup>

        <div class="all-collection-button-tab">
            <a href="/collections/mycollections"> <button class="primary">Go to My Collections</button></a>
        </div>

        <hr>
        <!-- maybe search bar -->
        <!-- my collections button -->
        

        <!-- display all collections -->
        <div class="cards-grid">
            <% collectionlist.forEach((collection)=> { %>
            <article class="card">
                <a href="/collections/<%=collection.collection_id%>"> <%=collection.collection_name%> </a>
                <%=collection.creation_date%>
            </article> 
            <% }); %>
        </div>

    </main>
</body>

<!-- footer -->
<%- include('footer') %>